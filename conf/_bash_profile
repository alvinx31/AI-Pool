# Design to be used as ~/.bash_profile in Mac OS X.

# remember the history!
export HISTFILESIZE=100000
# Set how many commands to keep in the current session history list
export HISTSIZE=100000

# Fix unknown locale: UTF-8 in Python.
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export TESSDATA_PREFIX=/Users/yuanming/GitHub/tesseract-ocr/

# for tmux
alias tns="tmux new -s"

# for color
export CLICOLOR=1
# \h:\W \u\$
#export PS1='\[\033[01;33m\]\u@\h\[\033[01;31m\] \W\$\[\033[00m\] '
export PS1='[\u@\h \W]\$ '

# git shortcut.
alias gcm='git commit -am'
alias glog='git log --oneline --graph --decorate'

export CLICOLOR=1
export LSCOLORS=gxfxaxdxcxegedabagacad

# added by Anaconda3 5.2.0 installer
export PATH="/Users/yuanming/anaconda3/bin:$PATH"
export PATH="/usr/local/opt/llvm/bin:$PATH"
export LDFLAGS="-L/usr/local/opt/llvm/lib"
export CPPFLAGS="-I/usr/local/opt/llvm/include"
HOMEBREW_NO_AUTO_UPDATE=1
